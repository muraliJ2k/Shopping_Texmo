
@model IEnumerable<ShoppingDA.Products>

@{
    ViewBag.Title = "Index";
    var data = ViewData["productname"];
}


<h2>POSIndex</h2>
<form>
<table cellpadding="0" cellspacing="0">
        <tr>
            <th>ID</th>
            <th>ProductName</th>
            <th>Price</th>
            <th>Quantity</th>
        </tr>

@foreach (ShoppingDA.Products prod in Model)
        {
            <tr>
                <td>@prod.ID</td>
                <td>@prod.ProductName</td>
                <td><input name="PPRICE" value="@prod.Price"></td>
                <th> <input name="QTY" onKeyUp="multiply(this)"></th>
            </tr>
        }

     <tr>
         <th>Total</th>
         <th><input name="TOTAL" readonly maxlength="5"></th>
     </tr>
    </table>

  
</form>

<script type="text/javascript">
    function multiply(element) {
        var form = element.form;
        var opvalue = element.value * form.PPRICE.value;
        form.TOTAL.value = opvalue.toFixed(2);
    }
</script>